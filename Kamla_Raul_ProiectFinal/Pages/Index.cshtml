@page
@model IndexModel
@{
    ViewData["Title"] = "Welcome to VideoGame Online Shop";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<style>
    .background-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: -1;
    }

    .background-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .content {
        position: relative;
        z-index: 1;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100vh;
    }

    h1 {
        color: #fff; /* Setează culoarea textului la alb sau alta culoare vizibilă pe imagine */
        text-align: center;
    }
</style>

<div class="background-container">
    <img src="~/images/video.png" alt="Video Game" class="background-image" />
</div>

<div class="content">
    <h1 class="display-4">Welcome to VideoGame Online Shop</h1>
</div>